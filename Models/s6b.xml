<?xml version="1.0"?>

<PropertyList>

  <path>s6b.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>aile</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>floteurG</object-name>
    <object-name>floteurD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>poteau</object-name>
    <object-name>tourvitre</object-name>


    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>cables</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Supermarine-S.6B/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.307 </x-m>
      <y-m>  0.022 </y-m>
      <z-m> -0.129 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Supermarine-S.6B/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.117 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.540 </z-m>
    </offsets>
  </model>

  <!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>Pilote</object-name>
    <condition>
      <greater-than>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.075 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.358 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.913 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.395 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <axis>
      <x1-m> 3.806 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.559 </z1-m>
      <x2-m> 3.767 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 1.820 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.088 </x-m>
      <y-m> -2.903 </y-m>
      <z-m> -0.151 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation> 

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.088 </x-m>
      <y-m>  2.903 </y-m>
      <z-m> -0.151 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation> 

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>tourvitre</object-name>
    <object-name>vitre</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-45</factor>
    <center>
      <x-m> -0.142 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.740 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>
