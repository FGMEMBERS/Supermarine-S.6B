    <path>Aircraft/Supermarine-S.6B/Models/Interior/interior.xml</path>
  </model>

  <!-- For Rembrandt -->
  <animation>
    <type>noshadow</type>
    <object-name>Interieur</object-name>
  </animation>
  
  <!-- Une ombre pour OSG -->
  <model>
    <path>Aircraft/Supermarine-S.6B/Models/shadow.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
