<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>Emmanuel BARANGER (3D/FDM), Pierre GEOFFROY (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>0.1 Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <type type="string">seaplane</type>
  
    <startup>
      <splash-texture>Aircraft/Supermarine-S.6B/s6b-splash.png</splash-texture>
    </startup>
  
    <sound>
      <path>Aircraft/Supermarine-S.6B/Sounds/s6b-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Supermarine-S.6B/Models/s6b.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">  0 </int>  <!-- 0 immat -->
        <int type="int">  0 </int>  <!-- 1 immat -->
        <int type="int">  0 </int>  <!-- 2 immat -->
        <int type="int">  0 </int>  <!-- 3 immat -->
        <int type="int">  0 </int>  <!-- 4 immat -->
        <int type="int">  0 </int>  <!-- 5 immat -->
        <int type="bool"> 0 </int>  <!-- 6 smoke -->
        <int type="int">  0 </int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Supermarine S6 b</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/s6b-menu.xml"/>

  </sim>

  <yasim>
    <pa100>
      <pilot-lb>180</pilot-lb>
    </pa100>
  </yasim>

  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/s6b-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Supermarine-S.6B/Nasal/doors.nas</file>
    </doors>
    <s6b>
      <file>Aircraft/Supermarine-S.6B/Nasal/light.nas</file>
      <file>Aircraft/Supermarine-S.6B/Nasal/liveries.nas</file>
    </s6b>
  </nasal>

</PropertyList>

